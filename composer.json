{
    "name": "yourname/tours-and-travels-app",
    "description": "A simple tours and travels PHP application",
    "type": "project",
    "require": {
        "php": "^7.4 || ^8.0",
        "ext-mysqli": "*",
        "ext-pdo": "*",
        "ext-pdo_mysql": "*",
        "monolog/monolog": "^2.0"  // Example of a commonly used PHP package for logging
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"  // PHPUnit for testing
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "scripts": {
        "start": "php -S localhost:8000 -t public",
        "test": "phpunit"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist"
    }
}
